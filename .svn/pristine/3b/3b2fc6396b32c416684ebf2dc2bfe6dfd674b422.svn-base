<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_email_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.zfsoft.zf_new_email.widget.swipemenulistview.SwipeMenuListView
            android:id="@+id/fragment_email_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_grayer"
            android:dividerHeight="@dimen/view_height" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <include
        android:id="@+id/common_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/common_empty_view"
        android:visibility="gone" />

</LinearLayout>