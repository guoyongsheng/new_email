<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/item_email_list_margin"
        android:paddingTop="@dimen/item_email_list_margin" >

        <CheckBox
            android:id="@+id/item_select_contracts_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:checked="false"
            android:enabled="false" />

        <ImageView
            android:id="@+id/item_select_contracts_icon"
            android:layout_width="@dimen/email_check_edit_height"
            android:layout_height="@dimen/email_check_edit_height"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_select_contracts_check"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_select_contracts_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_email_list_margin"
            android:layout_toRightOf="@id/item_select_contracts_icon"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/item_select_contracts_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_select_contracts_name"
            android:layout_below="@id/item_select_contracts_name"
            android:textSize="@dimen/font_small" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@color/color_gray" />

</LinearLayout>