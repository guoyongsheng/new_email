<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height_common" >

        <ImageView
            android:id="@+id/item_history_icon"
            android:layout_width="@dimen/common_icon_bottom_size"
            android:layout_height="@dimen/common_icon_bottom_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/history_icon" />

        <LinearLayout
            android:id="@+id/item_history_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="@dimen/common_icon_bottom_size"
                android:layout_height="@dimen/common_icon_bottom_size"
                android:layout_marginLeft="@dimen/item_email_list_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/search_delete" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_history_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_email_list_margin"
            android:layout_toLeftOf="@id/item_history_delete"
            android:layout_toRightOf="@id/item_history_icon"
            android:singleLine="true"
            android:textSize="@dimen/font_small" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/gainsboro" />

</LinearLayout>