<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_inner_contact_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height_common"
        android:background="@color/color_white" >

        <ImageView
            android:id="@+id/item_inner_contact_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_email_list_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_inner_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/select_inner_contact_name_margin_image"
            android:layout_toRightOf="@id/item_inner_contact_image"
            android:textSize="@dimen/font_small" />

        <ImageView
            android:id="@+id/item_inner_contact_image_select"
            android:layout_width="@dimen/select_inner_contact_icon_size"
            android:layout_height="@dimen/select_inner_contact_icon_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/item_email_list_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/color_grayer" />

</LinearLayout>